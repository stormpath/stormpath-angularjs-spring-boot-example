{
  "name": "angular-seed",
  "private": true,
  "version": "1.1.0",
  "description": "A starter project for AngularJS",
  "repository": "https://github.com/mraible/angular-seed",
  "license": "MIT",
  "devDependencies": {
    "bower": "^1.7.7",
    "gulp": "~3.9.1",
    "gulp-clean": "~0.3.2",
    "gulp-concat": "~2.6.0",
    "gulp-load-plugins": "~1.3.0",
    "gulp-clean-css": "~2.0.13",
    "gulp-rev": "~7.1.2",
    "gulp-uglify": "~2.0.0",
    "gulp-usemin": "~0.3.24",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1",
    "protractor": "^3.2.2"
